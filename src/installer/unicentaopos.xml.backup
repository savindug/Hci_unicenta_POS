                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../../target/Bonus</origin>
                            <onPackingFilterList>
                                <fileNameFilter>
                                    <logic>does_not_match</logic>
                                    <pattern>Thumbs.db</pattern>
                                </fileNameFilter>
                            </onPackingFilterList>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>../../target/start.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../target/configure.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../target/unicentaopos.jar</origin>
