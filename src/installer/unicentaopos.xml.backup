                        <distributionFile>
                            <origin>README_Locales.txt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>README</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <allowWildcards>1</allowWildcards>
                            <includeFiles>.pdf</includeFiles>
                            <origin>Release Notes</origin>
                            <onPackingFilterList>
                                <fileNameFilter>
                                    <logic>matches</logic>
                                    <pattern>*.pdf</pattern>
                                </fileNameFilter>
                            </onPackingFilterList>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>../../target/configure.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../target/start.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>orderpop.bat</origin>
                        </distributionFile>
